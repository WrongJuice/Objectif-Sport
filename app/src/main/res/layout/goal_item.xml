<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/goal_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        style="@style/itemTitle"
        android:text="@string/goal_description"
        android:id="@+id/goal_description"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/itemDescriptionText"
            android:text="@string/sport"/>

        <TextView
            style="@style/itemDescriptionText"
            android:text="@string/sport_name"
            android:id="@+id/sport_name"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/itemDescriptionText"
            android:text="@string/creation_date"/>

        <TextView
            style="@style/itemDescriptionText"
            android:text="@string/random_date"
            android:id="@+id/creation_date"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/itemDescriptionText"
            android:text="@string/goal_status"/>

        <TextView
            style="@style/itemDescriptionText"
            android:text="@string/done_not_done"
            android:id="@+id/goal_status"/>

    </LinearLayout>

</LinearLayout>